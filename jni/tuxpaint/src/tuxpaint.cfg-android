fullscreen=yes

native=yes

orient=landscape

print=yes

sound=yes

quit=yes

complexshapes=yes

mixedcase=yes

dontgrab=yes

hidecursor=yes

label=yes

outlines=yes

stamps=yes

stampcontrols=yes

magiccontrols=yes

sysfonts=yes

save=yes

autosave=no

saveover=ask

savedir=/mnt/sdcard/TuxPaint

datadir=/mnt/sdcard/TuxPaint

nolockfile=yes

onscreen-keyboard=yes

onscreen-keyboard-layout=SYSTEM
